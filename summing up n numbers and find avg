#include <stdio.h>

int main() {
    int n, sum = 0;
    float average;

    printf("Enter the number of elements (n): ");
    scanf("%d", &n);
    for (int i = 1; i <= n; i++) {
        int num;
        printf("Enter number %d: ", i);
        scanf("%d", &num);
        sum += num;
    }
    average = (float) sum / n;

    printf("Sum of %d numbers is: %d\n", n, sum);
    printf("Average of %d numbers is: %.2f\n", n, average);
    return 0;
}
